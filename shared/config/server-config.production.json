{
  "environment": "production",
  "debug": false,
  "servers": {
    "nodejs": {
      "port": 3001,
      "host": "0.0.0.0",
      "name": "nodejs-server"
    },
    "python": {
      "port": 3002,
      "host": "0.0.0.0",
      "name": "python-server"
    },
    "golang": {
      "port": 3003,
      "host": "0.0.0.0",
      "name": "golang-server"
    },
    "csharp": {
      "port": 3004,
      "host": "0.0.0.0",
      "name": "csharp-server"
    }
  },
  "redis": {
    "host": "${REDIS_HOST}",
    "port": "${REDIS_PORT}",
    "db": "${REDIS_DB}",
    "password": "${REDIS_PASSWORD}",
    "retry_delay_on_failover": 100,
    "max_retries_per_request": 3
  },
  "nginx": {
    "port": 80,
    "upstream_name": "backend",
    "health_check_path": "/api/health"
  },
  "cors": {
    "allowed_origins": ["https://yourdomain.com"],
    "allowed_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allowed_headers": ["Content-Type", "Authorization", "X-Request-ID"],
    "allow_credentials": true
  },
  "logging": {
    "level": "info",
    "format": "json",
    "file_enabled": true,
    "console_enabled": true
  },
  "api": {
    "base_path": "/api",
    "version": "v1",
    "swagger_enabled": false,
    "rate_limit": {
      "window_ms": 900000,
      "max_requests": 100
    }
  },
  "sse": {
    "heartbeat_interval": 30000,
    "reconnect_timeout": 5000,
    "max_connections": 1000
  },
  "jsonrpc": {
    "version": "2.0",
    "batch_limit": 10,
    "timeout": 30000
  }
}